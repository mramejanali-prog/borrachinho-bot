# FunÃ§Ã£o principal
def main():
    app = ApplicationBuilder().token(TOKEN).build()

    app.add_handler(CommandHandler("start", start))
    app.add_handler(CommandHandler("lembrete", lembrete))
    app.add_handler(CommandHandler("despesa", despesa))
    app.add_handler(CommandHandler("entrada", entrada))
    app.add_handler(CommandHandler("correcao", correcao))
    app.add_handler(CommandHandler("glicemia", glicemia))
    app.add_handler(CommandHandler("ideia", ideia))
    app.add_handler(CommandHandler("rotina", rotina))
    app.add_handler(CommandHandler("humor", humor))
    app.add_handler(CommandHandler("elogia_me", elogia_me))

    app.run_polling()

if __name__ == "__main__":
    main()

